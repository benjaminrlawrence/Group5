<% if user_signed_in? %>
    Welcome <%= current_user.email %>
    <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: 'btn-xs btn-danger' %>
    <%= link_to 'Admin', main_admin_path, class: 'btn-xs btn-primary' %>
<% else %>
    You are not signed in.
    <%= link_to 'Login', new_user_session_path, class: 'btn-xs btn-success' %>
<% end %>