<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- header section -->
<header class="navbar navbar-fixed-top navbar-default">
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-6">
      <!--@TODO add sidebar-->
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Twitter Query Engine</a>
      </div>
      <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Admin",   main_admin_path %></li>
        <li><%= link_to "Log in", '#' %></li>
      </ul>
      </nav>
    </div>
    <div class="col-xs-3">
      <%= render 'layouts/user_widget' %>
    </div>
  </div>
</div>
</header>

<!-- content section -->
<div class="container">
  <p class="warning"><%= notice %></p>
  <p class="alert warning"><%= alert %></p>
    <%= yield %>
</div>

<!-- footer section -->
<footer class="footer navbar-fixed-bottom navbar-default">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-6">
        <div class="navbar-header">Twitter Query Engine Copyright <%= Time.now.year %></div>
      </div>
      <div class="col-xs-6">
        <nav>
          <ul class="nav navbar-nav">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "About", '#' %></li>
            <li><a href="http://news.railstutorial.org/">News</a></li>
          </ul>
        </nav>
      </div>
      </div>
  </div>
</footer>
</body>
</html>
